{
  "editor.formatOnSave": false,
  "eslint.enable": true,
  "eslint.autoFixOnSave": true,
  "eslint.alwaysShowStatus": true,
  "eslint.validate": [
    {
      "language": "vue",
      "autoFix": true
    },
    {
      "language": "html",
      "autoFix": true
    },
    {
      "language": "javascript",
      "autoFix": true
    }
  ],
  "eslint.options": {
    "extensions": [".js", ".vue"]
  },
  "files.associations": {
    "*.vue": "vue",
    "*.wxml": "html",
    "*.wxss": "css"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
